<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CuantoVa.Views.BarScan" BackgroundImage="https://img.freepik.com/vector-gratis/fondo-pintura-acuarela-rosa-vibrante_53876-58930.jpg">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="20">
                
                <Button Command="{Binding ButtonCommand}" HorizontalOptions="FillAndExpand" VerticalOptions="EndAndExpand" BackgroundColor="Teal" TextColor="White" FontSize="Medium" Text="Leer Codigo de barras" />
                <Label Text="{Binding Result}" HorizontalOptions="Center" VerticalOptions="StartAndExpand" />

                <Button Text="Ingreso Manual"
                    Clicked="Button_Clicked" BackgroundColor="Azure"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>